{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 30
      }
    },
    {
      "src": "api/cron/weather.js",
      "use": "@vercel/node",
      "config": {
        "memory": 256,
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/cron/weather",
      "dest": "/api/cron/weather.js"
    },
    {
      "src": "/pajar/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/weather",
      "schedule": "0 6 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
